{{#each cars}}
    <div class="mb60 car-details">
        <h2>{{this.make}} {{this.model}} {{this.year}}</h2>

        <img class="car-details" src="{{this.image}}" alt="{{this.make}} {{this.model}}" />

        <h3>{{this.pricePerDay}} BGN / day</h3>

        {{#if this.power}}
            <h3>{{this.power}} hp</h3>
        {{/if}}
    </div>
{{else}}
    <h2>No cars available</h2>
{{/each}}